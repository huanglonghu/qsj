<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="title"
            type="String" />

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="360pt"
        android:background="@drawable/bg_8"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="50pt"
        android:paddingTop="20dp"
        android:paddingRight="50pt">


        <TextView
            android:id="@+id/des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="20dp"
            android:text="您好，我是轻松借客服！很高兴为你服务，有借款需求请回复（1）。"
            android:textColor="#080808"
            android:textSize="29pt" />


        <Button
            android:id="@+id/sure"
            android:layout_width="match_parent"
            android:layout_height="80pt"
            android:layout_marginTop="70pt"
            android:layout_marginBottom="50pt"
            android:background="@drawable/shape6"
            android:gravity="center"
            android:text="确定"
            android:textColor="#fff"
            android:textSize="31pt" />


    </LinearLayout>
</layout>