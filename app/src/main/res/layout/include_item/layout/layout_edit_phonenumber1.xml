<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>


        <variable
            name="hint"
            type="String" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="30pt"
        android:paddingRight="30pt">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{hint}"
            android:textColor="#000"
            android:textSize="13sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal">

            <com.example.qsl.customview.MyEditText
                android:id="@+id/yzm"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:background="@drawable/shape23"
                android:hint="请输入短信验证码"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:textSize="15sp" />



            <Button
                android:id="@+id/getYzm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:textSize="31pt"
                android:background="@drawable/bg_btn_yzm2"
                android:text="获取验证码"
                android:textColor="@drawable/tv_color_selector3" />

        </LinearLayout>


        <Button
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape1"
            android:text="下一步"
            android:textColor="#fff" />


    </LinearLayout>
</layout>